@using System.Security.Claims

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SigaDoc - Integracao</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SigaDocIntegracao.Web.styles.css" asp-append-version="true" />
    <style>
        html, body {
            height: 100%;
            display: flex;
            flex-direction: column;
        }

        .container {
            flex: 1; /* Este container ocupará o espaço disponível */
            padding-bottom: 60px; /* Espaço inferior para evitar sobreposição com o footer */
        }

        footer {
            background-color: white; /* Adicione uma cor de fundo se desejar */
            padding: 1rem; /* Espaçamento interno do footer */
            text-align: center; /* Centraliza o texto do footer */
            margin-top: auto; /* Empurra o footer para o final da página */
            margin-bottom: 40px; /* Ajusta o espaço inferior do footer */
        }
    </style>
</head>
<body>
    @if (User.Identity.IsAuthenticated.Equals(true) && ViewData["Title"] != "Login")
    {
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow" style="padding: 0.5rem 7rem 0 7rem;">
                <div class="container-fluid">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                        <img src="~/img/logo_infraero.png" alt="Logo Infraero" style="height: 30px; margin-right: 10px;" />
                    </a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">

                        <!-- Mover o item "Admin" para o início da barra de navegação -->
                        <ul class="navbar-nav d-flex flex-grow-1 justify-content-start">
                            @if (User.HasClaim(c => c.Type == "Tipo" && c.Value == "Admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Usuario" asp-action="Index">Usuário</a>
                                </li>
                            }

                            <li class="nav-item dropdown">
                                @if (User.HasClaim(c => c.Type == "Permissao" && !string.IsNullOrEmpty(c.Value) && c.Value.Contains("Módulo carga")))
                                {
                                    <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarCarga" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        Módulo Carga
                                    </a>
                                    <ul class="dropdown-menu" aria-labelledby="navbarCarga">
                                        <li>
                                            <a class="dropdown-item" asp-area="" asp-controller="Carga" asp-action="Index">Carga automática</a>
                                        </li>
                                    </ul>
                                }
                            </li>

                            <li class="nav-item dropdown">
                                @if (User.HasClaim(c => c.Type == "Permissao" && !string.IsNullOrEmpty(c.Value) && c.Value.Contains("Módulo email")))
                                {
                                    <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarEmail" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        Módulo E-mail
                                    </a>
                                    <ul class="dropdown-menu" aria-labelledby="navbarEmail">
                                        <li>
                                            <a class="dropdown-item" asp-area="" asp-controller="ExModeloEmailParamModels" asp-action="Index">Gerenciar notificação</a>
                                        </li>
                                    </ul>
                                }
                            </li>
                        </ul>

                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <span class="nav-link text-dark">@User.FindFirst(ClaimTypes.Email)?.Value</span>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Login" asp-action="Logout">Sair</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
    }
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <p>© 2024 SigaDoc. Todos os direitos reservados.</p>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
