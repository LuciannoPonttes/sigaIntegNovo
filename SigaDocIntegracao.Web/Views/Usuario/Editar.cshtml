@using SigaDocIntegracao.Web.UsuarioContexto.ViewModel
@model AtualizarUsuarioViewModel

@{
    ViewData["Title"] = "Atualizar Usuário";
}

<h1>@ViewData["Title"]</h1>

<form asp-controller="Usuario" asp-action="Editar" method="post">
    <div class="form-group mb-3">
        <label asp-for="Nome" class="control-label"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Email" class="control-label"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Matricula" class="control-label"></label>
        <input asp-for="Matricula" class="form-control" />
        <span asp-validation-for="Matricula" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Tipo" class="control-label">Tipo:</label>
        <select asp-for="Tipo" class="form-control">
            <option value="">Selecione</option>
            <option value="Admin">Admin</option>
            <option value="Comum">Comum</option>
        </select>
        <span asp-validation-for="Tipo" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label>Permissões:</label><br />
        @foreach (var permissao in Model.PermissoesDisponiveis)
        {
            <div>
                <input type="checkbox" name="PermissoesSelecionadas"
                       value="@permissao.Id"
                @(Model.PermissoesSelecionadas.Contains(permissao.Id) ? "checked" : "") />
                @permissao.Nome
            </div>
        }
    </div>

    <div class="form-group mb-3">
        <label asp-for="StatusCadastro" class="control-label">Status Cadastro:</label>
        <select asp-for="StatusCadastro" class="form-control">
            <option value="">Selecione</option>
            <option value="Ativo">Ativo</option>
            <option value="Inativo">Inativo</option>
        </select>
        <span asp-validation-for="StatusCadastro" class="text-danger"></span>
    </div>

    <input type="hidden" asp-for="Id" value="@Model.Id" />

    <button type="submit" class="btn btn-primary mt-3">Atualizar</button>
    <a asp-area="" asp-controller="Usuario" asp-action="Index" class="btn btn-secondary mt-3">Cancelar</a>
</form>
