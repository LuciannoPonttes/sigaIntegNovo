@using SigaDocIntegracao.Web.UsuarioContexto.ViewModel
@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<style>    
    .login-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh; 
    }

    .login-form {
        width: 100%;
        max-width: 400px;
        padding: 15px;
        border: 1px solid #ddd;
        border-radius: 5px;
        background-color: #f9f9f9;
    }

    .login-title {
        margin-top: 2rem;
        margin-bottom: 20px;
    }
    
    .text-danger ul {
        list-style-type: none;
        padding-left: 0;
        padding-top: 0.25rem;
    }
    
        .text-danger ul li {
            margin-left: 0;
        }
</style>

<div class="login-container">   
    <div class="login-form">
        <div>
            <img src="/img/logo_infraero.png" />
        </div>
        <h3 class="login-title">Login</h3>
        <form asp-controller="Login" asp-action="Login" method="post" role="form" onsubmit="showLoader()">
            <div class="form-group">
                <label asp-for="Matricula" class="col-md-2"></label>
                <div class="col-md-12">
                    <input asp-for="Matricula" class="form-control" placeholder="Matrícula" required />
                    <span asp-validation-for="Matricula" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Senha" class="col-md-2 mt-2"></label>
                <div class="col-md-12">
                    <input asp-for="Senha" class="form-control" placeholder="Senha" type="password" required />
                    <span asp-validation-for="Senha" class="text-danger"></span>
                </div>
            </div>

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group text-center mt-3">
                <button type="submit" class="btn btn-success btn-block">Entrar</button>
            </div>
           
        </form>
    </div>
</div>